<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_corners_dropdown">

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/imageButtonExpand"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:id="@+id/imageButtonExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_plus"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@id/textQuestion"
        android:layout_alignStart="@id/textQuestion"
        android:layout_toEndOf="@id/textQuestion"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:visibility="gone"/> <!-- По умолчанию скрыто -->

</RelativeLayout>
